.chatMain__messageList__index{data: {message: {id: message.id}}}
  .chatMain__messageList__index--data
    .chatMain__messageList__index--data--name
      = message.user.name
    .chatMain__messageList__index--data--date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chatMain__messageList__index--message
    - if message.content.present?
      = message.content
    = image_tag message.image.url,class: "chatMain__messageList__index--message--img" if message.image.present?
